<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/btntoolbar"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@drawable/sin_city_toolbar"
    android:elevation="12dp">

    <RelativeLayout
        android:id="@+id/toplayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/navigation_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_menu_icon_white" />

        <TextView
            android:id="@+id/app_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@id/navigation_btn"
            android:layout_toRightOf="@id/navigation_btn"
            android:text="FYP"
            android:textColor="@color/white"
            android:textSize="24sp" />


        <ImageView
            android:id="@+id/wishlist_toolbar_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:src="@drawable/heart_white_thick_stroke" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/buttonBar"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/custom_search_bar"
            android:layout_marginHorizontal="10dp"
            android:elevation="12dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:id="@+id/magniGlass"
                android:src="@drawable/ic_action_search"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <View
                android:id="@+id/divider3"
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="6dp"
                android:background="?android:attr/listDivider"
                android:layout_toRightOf="@id/magniGlass"
                android:layout_toEndOf="@id/magniGlass" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@id/divider3"
                android:layout_toRightOf="@id/divider3"
                android:text="@string/searchcat"
                android:textSize="15sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/welcomeUserTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/buttonBar"
            android:layout_marginStart="18dp"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="5dp"
            android:text="Welcome, Kanishk"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>